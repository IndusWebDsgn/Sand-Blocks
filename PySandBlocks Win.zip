pygame.init()

WIDTH, HEIGHT = 800, 600

LIGHT_THEME = {"bg": (255, 255, 255), "text": (0, 0, 0)}
DARK_THEME = {"bg": (50, 50, 50), "text": (200, 200, 200)}

screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Sound and Theme Example")

font = pygame.font.SysFont("Arial", 36)

click_sound = pygame.mixer.Sound("click.wav")  # Add your sound file here

current_theme = LIGHT_THEME

def draw_screen():
    """Draw the current screen based on the theme."""
    screen.fill(current_theme["bg"])
    text = font.render("Click to change theme!", True, current_theme["text"])
    text_rect = text.get_rect(center=(WIDTH // 2, HEIGHT // 2))
    screen.blit(text, text_rect)
    pygame.display.flip()

running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
        elif event.type == pygame.MOUSEBUTTONDOWN:
            # Play sound effect
            click_sound.play()
            # Toggle theme
            current_theme = DARK_THEME if current_theme == LIGHT_THEME else LIGHT_THEME

    draw_screen()
